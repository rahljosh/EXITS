<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.visual28.mango.plugins.fancybox" name="Fancybox" version="1.0" provider-name="Mark Aplet" class="fancybox.Handler">
	
	<description>
		<![CDATA[
			Adds <a href="http://fancy.klade.lv/">Fancybox</a> support.
			<br /><br />
			Fancybox is tool for displaying images, html content and multi-media in a Mac-style "lightbox" that floats overtop of web page.
		]]>
	</description>
	
	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>
	
	<listens>
		<event name="beforeHtmlHeadEnd" type="synch" priority="5" />
	</listens>

	<listensAdmin>
		<event name="settingsNav" type="synch" priority="5" />
		<event name="showFancyboxSettings" type="synch" priority="5" />
	</listensAdmin>
	
	<assets>
		<asset dir="assets" dest="" />
	</assets>
	
</plugin>