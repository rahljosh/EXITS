<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.visual28.mango.plugins.Memento" name="Memento Photo Gallery" version="1.1" provider-name="visual28" class="Memento.Handler">
	<description>
		<![CDATA[
		This plugin allows you to create image galleries from a folder of images automatically.<br /><br />
		Written By: <a href="http://www.visual28.com">Mark Aplet</a><br/>
		Find the latest version at: <a href="http://www.visual28.com/page/projects">Visual28</a>
		]]>
	</description>

	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>
	
	<listens>
		<event name="pageGetContent" type="synch" priority="5" />
		<event name="postGetContent" type="synch" priority="5" />
		<event name="settingsNav" type="synch" priority="5" />
		<event name="showMementoSettings" type="synch" priority="5" />
		<event name="beforeHtmlHeadEnd" type="synch" priority="5" />
	</listens>
	
	<assets>
		<asset file="assets/iedit.cfc" />
	</assets>
</plugin>