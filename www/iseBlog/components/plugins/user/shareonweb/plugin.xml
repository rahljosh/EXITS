<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.thecfguy.mango.plugins.shareonweb" 
name="ShareOnWeb" version="2.0" provider-name="Pritesh Patel" class="shareonweb.Handler">
<description><![CDATA[
Shareonweb plugin allow your blog reader to share on popular social sites using addthis.com<br/>
<br/>Created by <a href="www.thecfguy.com">Pritesh Patel</a>]]>
</description>
 	<requiresVersion match="greaterOrEqual">1.3</requiresVersion>
	<listens>
		<event name="postGetContent" type="synch" priority="5" />
		<event name="pageGetContent" type="synch" priority="5" />
		<event name="beforeHtmlBodyEnd" type="synch" priority="5" />
	</listens>
	<listensAdmin>
		<event name="settingsNav" type="synch" priority="5" />
		<event name="showshareOnWebSettings" type="synch" priority="5" />
	</listensAdmin>
	<assets>
		<asset file="assets/button1.gif"/>
		<asset file="assets/button2.gif"/>
		<asset file="assets/button3.gif"/>
		<asset file="assets/button4.gif"/>
		<asset file="assets/rssbutton1.gif"/>
		<asset file="assets/rssbutton2.gif"/>
		<asset file="assets/rssbutton3.gif"/>
		<asset file="assets/rssbutton4.gif"/>
	</assets>
</plugin>